<%= render :partial => "demo/resume_style.html.erb" %>
<style>
ol li {
  margin-left: 30px;
}
.wall h3 {
  text-align: center;
}

.wall .dot {
}
.wall .span3 {
  margin: 5px 1px;
  padding: 8px 10px;
}
</style>

<body data-spy="scroll" data-target=".bs-docs-sidebar" data-offset="0">

    <!-- Docs nav
    ================================================== -->
      <div class="span3 bs-docs-sidebar" style="marign-left:0px;">
        <ul class="nav nav-list bs-docs-sidenav affix" id="favilities_list">
          <% for favor in @favorities %>
          <li><a  href="#nav_<%= dom_id favor %>"><i class="icon-chevron-right"></i><%= favor.label %></a></li>
	  <% end if  @favorities %>
        </ul>
      </div>

      <div class="span7" style="margin-left:100px;">

	  <% for favor in @favorities %>
	     <div class="toggle-show" id="nav_<%= dom_id favor %>">
		<div class="page-header">
		  <h1><%= favor.label %></h1>
		</div> 

		<div class="shadow-box"> 
                  <div>
		  <% favor.sites.each do |site| %>
		    <div class="span3 dot label label-info" id="<%= dom_id site %>">
		       <%= site.name %>
		       <%= link_to "", favority_site_path(favor,site), remote: true, class: "icon-list",
			   onclick: "$('.loading').css('display','block');" %>
		    </div>
		  <% end if favor.sites %>
                  </div>

		 </div> 
	       </div>
	  <% end if @favorities %>
     </div>

</body>
