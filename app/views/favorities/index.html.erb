<style>
.accordion .span3 {
  margin: 5px 1px;
  padding: 8px 10px;
  height:20px;
}
.accordion .label { 
 height: 15px;
 line-height:15px; 
}
</style>

<div class="accordion" id="favor_accordion">

  <% @favorities.each_with_index do |favority, index| %> 
    <div class="accordion-group">
	<div class="accordion-heading">
	    <a class="accordion-toggle collapsed nolink" data-parent="#favor_accordion" data-toggle="collapse" href="#<%= dom_id favority %>">
	      <%= favority.label %>|<span class="collapse-state">展开</span>

	      <%= link_to "添加",  new_favority_path, :remote => true, class: "btn btn-primary right",
	        onclick: "$('.loading').css('display','block');" if user_signed_in? %>
	    </a>
	</div>

	<div class="accordion-body collapse <%= index == 0 ? 'in' : '' %>" id="<%= dom_id favority %>">
	    <div class="accordion-inner">
		<% array_slice(favority.sites,4).each_with_index do |array, i| %>
                  <div class="row-fluid">
		    
		    <% array.each do |site| %>
		      <% if site %>
			<div class="span3">
			    <span class="label label-info"><%= site.name unless site.nil? %></span>
			</div>
		      <% end %>
		    <% end unless array.empty? %>
                  </div>
		<% end %>
	    </div>
	    <!-- accordion-inner-->
	</div>
	<!--accordion-body-->
    </div>
    <!--accordion-group-->
  <% end %>

</div>

